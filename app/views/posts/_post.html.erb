	<div class="row">
    <div class='span0 well text-center'>
      <%= link_to vote_post_path(post, vote: true), method: 'post' do %>
      <% if current_user %>
        <i class='icon-arrow-up'></i>
      <% end %>
      <% end %>
      <br/>
      <%= post.total_votes %> <%= post.total_votes.abs == 1 ? "vote" : "votes" %>
      <br>
      <%= link_to vote_post_path(post, vote: false), method: 'post' do %>
      <% if current_user %>
        <i class='icon-arrow-down'></i>
      <% end %>
      <% end %>
    </div>
    <div class='span8 well'>      
      <p><%= render post.categories %></p>
      <h4><%= link_to post.title, fix_url(post.url) %></h4>
      <p><%= post.description %></p>
      <p>
        <span class='quiet'>posted by</span> <%= link_to post.user.username, user_path(post.user) %>
        <small>at </small> <%= display_datetime(post.created_at) %>
        <br>
        <small>
        <span>
          <%= link_to("#{post.comments.size} comments", post_path(post)) %>
        </span>
        </small>
      </p>
    </div>
  </div>